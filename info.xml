<?xml version="1.0"?>
<extension key="container_logs" type="module">
  <file>container_logs</file>
  <name>stderr Log</name>
  <description>Write CiviCRM Logs to stderr. Useful for running CiviCRM inside a Docker container.</description>
  <license>AGPL-3.0</license>
  <authors>
    <author>
      <name>David Hayes</name>
      <email>david@blackbrick.software</email>
      <role>Maintainer</role>
    </author>
  </authors>
  <urls>
    <url desc="Main Extension Page">https://github.com/blackbricksoftware/civicrm-container-logs</url>
    <url desc="Documentation">https://github.com/blackbricksoftware/civicrm-container-logs</url>
    <url desc="Support">https://github.com/blackbricksoftware/civicrm-container-logs/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2026-01-15</releaseDate>
  <version>1.0.5</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>6.5</ver>
  </compatibility>
  <comments></comments>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>Blackbricksoftware\CiviCRMContainerLogs</namespace>
    <format>25.01.1</format>
    <angularModule>crmContainerLogs</angularModule>
  </civix>
  <mixins>
    <mixin>mgd-php@1.0.0</mixin>
    <mixin>setting-php@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
</extension>
